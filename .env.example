# =============================================================================
# Aurora Sun V1 -- Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
# =============================================================================

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
# Webhook secret for X-Telegram-Bot-Api-Secret-Token validation (FINDING-001)
TELEGRAM_WEBHOOK_SECRET=

# --- Database ---
DATABASE_URL=postgresql+asyncpg://aurora:password@localhost:5432/aurora_sun

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Encryption & Security (REQUIRED -- generate unique secrets!) ---
# Master encryption key for AES-256-GCM (base64-encoded 32-byte key)
AURORA_MASTER_KEY=
# HMAC secret for hashing PII (IP addresses, Telegram IDs)
AURORA_HMAC_SECRET=
# Salt for deterministic hashing (lookups)
AURORA_HASH_SALT=
# Salt for lookup hashing
AURORA_LOOKUP_SALT=
# Secret key for REST API JWT signing (FINDING-002, FINDING-030)
AURORA_API_SECRET_KEY=

# --- Development Mode ---
# Set to "1" to enable dev mode (relaxed key requirements, console logging)
AURORA_DEV_MODE=0
# Dev-only encryption key (only used when AURORA_DEV_MODE=1)
AURORA_DEV_KEY=

# --- Logging ---
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# --- LLM Providers ---
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# --- Voice (STT) ---
GROQ_API_KEY=

# --- Monitoring ---
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
